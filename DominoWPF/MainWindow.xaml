<Window x:Name="WindowMain" x:Class="DominoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DominoWPF"
        mc:Ignorable="d"
        Title="Like A Domino | WPF Edition" Height="722" Width="885" 
        MinWidth="600" MinHeight="400" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="209*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Stretch="Uniform" StretchDirection="Both" Grid.ColumnSpan="2">
            <Border x:Name="MainBorder" BorderBrush="Black" BorderThickness="1" Width="900" Height="720">
                <Grid x:Name="MainGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#FFE6E6FA" BorderBrush="#FFCCCCCC" BorderThickness="0,0,0,2">
                        <Grid Margin="20,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" Margin="20,0,0,0">
                                <Label x:Name="player1NameLabel" Content="Player 1" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player1ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" Margin="252,0,0,0" Width="177">
                                <Label x:Name="player3NameLabel" Content="Player 3" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player3ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" Margin="20,0,0,0">
                                <Label x:Name="player2NameLabel" Content="Player 2" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player2ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" Margin="252,0,0,0" Width="177">
                                <Label x:Name="player4NameLabel" Content="Player 4" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player4ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" x:Name="GameArea">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="Player3HandGrid" Grid.Row="0" Grid.Column="1" 
                        Background="#FFFFFDC7" Margin="5">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="Player3CardStackPanel" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Grid x:Name="Player4HandGrid" Grid.Row="1" Grid.Column="0" 
                        Background="#FFFFFDC7" Margin="5">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                                <StackPanel
                    VerticalAlignment="Center" Orientation="Vertical" x:Name="Player4CardStackPanel" HorizontalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Grid x:Name="Player2HandGrid" Grid.Row="1" Grid.Column="2" 
                        Background="#FFFFFDC7" Margin="5">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="Player2CardStackPanel" 
                                Orientation="Vertical" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Grid x:Name="Player1HandGrid" Grid.Row="2" Grid.Column="1" 
                        Background="#FFFFFDC7" Margin="5">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="Player1CardStackPanel" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>

                        <Grid x:Name="ContentGrid" Grid.Row="1" Grid.Column="1" 
                        Background="#FFBCFF86" Margin="5">

                            <StackPanel x:Name="LayerBottomStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,29">
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                            </StackPanel>
                            <StackPanel x:Name="LayerTopStackPanel" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,29,185,0" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                                <Button Content="Button" Background="#FFFF6868"/>
                            </StackPanel>
                            <Grid x:Name="LayerRightWrapper"
								  HorizontalAlignment="Center"
								  VerticalAlignment="Center"
								  Margin="0,280,-297,0">
                                <StackPanel x:Name="LayerRightStackPanel"
											Orientation="Horizontal"
											HorizontalAlignment="Center"
											VerticalAlignment="Top"
											RenderTransformOrigin="0.5,0.5">
                                    <StackPanel.RenderTransform>
                                        <RotateTransform Angle="-90"/>
                                    </StackPanel.RenderTransform>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                    <Button Content="Button" Background="#FFFF6A6A"/>
                                </StackPanel>
                            </Grid>

                            <Grid x:Name="LayerLeftWrapper"
								  HorizontalAlignment="Center"
								  VerticalAlignment="Center"
								  Margin="-297,-320,0,0">
                                <StackPanel x:Name="LayerLeftStackPanel"
											Orientation="Horizontal"
											HorizontalAlignment="Center"
											VerticalAlignment="Top"
											RenderTransformOrigin="0.5,0.5">
                                    <StackPanel.RenderTransform>
                                        <RotateTransform Angle="90"/>
                                    </StackPanel.RenderTransform>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                    <Button Content="Button" Background="#FFFF6E6E"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="PlaceLeftButton" 
							   HorizontalAlignment="Left" 
							   VerticalAlignment="Center"
							   Margin="70,0,0,0"
							   Content="◀ Place Left" 
							   Click="PlaceLeftButton_Click"
							   Width="100" 
							   Height="40"
							   FontSize="14"
							   Background="#FFE6F3FF"
							   BorderBrush="#FF4A90E2"/>

                            <Button x:Name="PlaceRightButton" 
								Content="Place Right ▶" 
								Click="PlaceRightButton_Click"
								Width="100" 
								Height="40"
								FontSize="14"
								Background="#FFE6F3FF"
								BorderBrush="#FF4A90E2"
								HorizontalAlignment="Right" 
								VerticalAlignment="Center"
								Margin="0,0,70,0"/>
                            <Ellipse Width="10" Height="10" 
									 Fill="#FF666666" 
									 HorizontalAlignment="Center" 
									 VerticalAlignment="Center"
									 Opacity="0.3"/>

                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1">
                                <Button x:Name="debugButton_Copy1" Content="margin right" Margin="51,299,568,83" Click="debugButton_Click"/>
                            </Border>
                            <Button x:Name="debugButton2" Content="margin top" Margin="53,341,568,42" Click="debugButton2_Click"/>
                        </Grid>
                        <Label x:Name="debuglabel" Content="Label" HorizontalAlignment="Left" Margin="30,246,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1"/>
                        <Button x:Name="updateLabelDebug" Content="Button" HorizontalAlignment="Left" Margin="69,387,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1" Click="updateLabelDebug_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>