<Window x:Class="DominoWPF.AudioSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DominoWPF"
        mc:Ignorable="d"
        Title="Audio Settings" Height="320" Width="280" ResizeMode="NoResize" WindowStartupLocation="Manual">

    <Window.Resources>
        <FontFamily x:Key="radjani_medium">/fonts/#Rajdhani Medium</FontFamily>
        <FontFamily x:Key="radjani_semibold">/fonts/#Rajdhani SemiBold</FontFamily>

        <LinearGradientBrush x:Key="YakuzaBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF0A0A0A" Offset="0"/>
            <GradientStop Color="#FF1A1A2E" Offset="0.5"/>
            <GradientStop Color="#FF16213E" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="NeonRedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFF0040" Offset="0"/>
            <GradientStop Color="#FFCC0033" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="NeonBlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00CCFF" Offset="0"/>
            <GradientStop Color="#FF0080CC" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="NeonYellowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFFFF00" Offset="0"/>
            <GradientStop Color="#FFCCCC00" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DarkControlBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF2A2A3A" Offset="0"/>
            <GradientStop Color="#FF1A1A2A" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="TextWhite" Color="#FFF0F0F0"/>
        <SolidColorBrush x:Key="BorderGlow" Color="#FF4A9EFF"/>

        <!-- Slider Button Style -->
        <Style x:Key="SliderButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Thumb Style -->
        <Style x:Key="SliderThumbStyle" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse x:Name="Ellipse" 
                                 Fill="{StaticResource NeonBlueGradient}"
                                 Stroke="{StaticResource BorderGlow}" 
                                 StrokeThickness="1">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="5" Color="#FF00CCFF" ShadowDepth="0" Opacity="0.6"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Ellipse" Property="Fill" Value="{StaticResource NeonYellowGradient}"/>
                                <Setter TargetName="Ellipse" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" Color="#FFFFFF00" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Main Slider Style -->
        <Style TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeonBlueGradient}"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground"
                                    Height="4"
                                    Background="{StaticResource DarkControlBackground}"
                                    BorderBrush="{StaticResource BorderGlow}"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="3" Color="#FF4A9EFF" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource SliderButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource SliderButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGlow}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="{StaticResource radjani_semibold}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" Color="#FF4A9EFF" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3A3A4A"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" Color="#FF00CCFF" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF1A1A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource YakuzaBackground}">
        <Rectangle Fill="#FF000000" Opacity="0.3">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/images/noise_pattern.png" TileMode="Tile" Viewport="0,0,0.1,0.1"/>
            </Rectangle.OpacityMask>
        </Rectangle>

        <!-- Left neon line -->
        <Rectangle HorizontalAlignment="Left" Width="3" Fill="{StaticResource NeonRedGradient}" Margin="8,0,0,0">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="8" Color="#FFFF0040" ShadowDepth="0" Opacity="0.8"/>
            </Rectangle.Effect>
        </Rectangle>

        <!-- Right neon line -->
        <Rectangle HorizontalAlignment="Right" Width="3" Fill="{StaticResource NeonBlueGradient}" Margin="0,0,8,0">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="8" Color="#FF00CCFF" ShadowDepth="0" Opacity="0.8"/>
            </Rectangle.Effect>
        </Rectangle>

        <StackPanel Margin="20,15,20,15">
            <!-- Title -->
            <Label Content="Audio Settings" 
                   FontFamily="{StaticResource radjani_semibold}" 
                   FontSize="18" 
                   Foreground="{StaticResource NeonRedGradient}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="8" Color="#FFFF0040" ShadowDepth="0" Opacity="0.8"/>
                </Label.Effect>
            </Label>

            <!-- BGM Volume -->
            <StackPanel Margin="0,0,0,15">
                <Grid>
                    <Label Content="Background Music" 
                           FontFamily="{StaticResource radjani_medium}" 
                           Foreground="{StaticResource TextWhite}"
                           HorizontalAlignment="Left"/>
                    <Label x:Name="bgmVolumeLabel" 
                           Content="50%" 
                           FontFamily="{StaticResource radjani_medium}" 
                           Foreground="{StaticResource NeonYellowGradient}"
                           HorizontalAlignment="Right"/>
                </Grid>
                <Slider x:Name="bgmVolumeSlider" 
                        Minimum="0" 
                        Maximum="100" 
                        Value="50" 
                        Margin="0,5,0,0"
                        ValueChanged="BgmVolumeSlider_ValueChanged"/>
            </StackPanel>

            <!-- SFX Volume -->
            <StackPanel Margin="0,0,0,15">
                <Grid>
                    <Label Content="Sound Effects" 
                           FontFamily="{StaticResource radjani_medium}" 
                           Foreground="{StaticResource TextWhite}"
                           HorizontalAlignment="Left"/>
                    <Label x:Name="sfxVolumeLabel" 
                           Content="100%" 
                           FontFamily="{StaticResource radjani_medium}" 
                           Foreground="{StaticResource NeonYellowGradient}"
                           HorizontalAlignment="Right"/>
                </Grid>
                <Slider x:Name="sfxVolumeSlider" 
                        Minimum="0" 
                        Maximum="100" 
                        Value="100" 
                        Margin="0,5,0,0"
                        ValueChanged="SfxVolumeSlider_ValueChanged"/>
            </StackPanel>

            <!-- Voice Volume -->
            <StackPanel Margin="0,0,0,20">
                <Grid>
                    <Label Content="Voice Lines" 
                           FontFamily="{StaticResource radjani_medium}" 
                           Foreground="{StaticResource TextWhite}"
                           HorizontalAlignment="Left"/>
                    <Label x:Name="voiceVolumeLabel" 
                           Content="100%" 
                           FontFamily="{StaticResource radjani_medium}" 
                           Foreground="{StaticResource NeonYellowGradient}"
                           HorizontalAlignment="Right"/>
                </Grid>
                <Slider x:Name="voiceVolumeSlider" 
                        Minimum="0" 
                        Maximum="100" 
                        Value="100" 
                        Margin="0,5,0,0"
                        ValueChanged="VoiceVolumeSlider_ValueChanged"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="resetButton" 
                        Content="Reset" 
                        Grid.Column="0"
                        Click="ResetButton_Click"
                        MouseEnter="Button_MouseEnter"/>

                <Button x:Name="closeButton" 
                        Content="Close" 
                        Grid.Column="2"
                        Click="CloseButton_Click"
                        MouseEnter="Button_MouseEnter"/>
            </Grid>
        </StackPanel>

        <!-- Decorative elements -->
        <Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="60" 
                 Margin="-30,-30,0,0" Fill="{StaticResource NeonRedGradient}" Opacity="0.1">
            <Ellipse.Effect>
                <BlurEffect Radius="15"/>
            </Ellipse.Effect>
        </Ellipse>

        <Ellipse HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Height="80" 
                 Margin="0,0,-40,-40" Fill="{StaticResource NeonBlueGradient}" Opacity="0.1">
            <Ellipse.Effect>
                <BlurEffect Radius="20"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</Window>