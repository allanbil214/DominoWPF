<Window x:Name="WindowMain" x:Class="DominoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DominoWPF"
        mc:Ignorable="d"
        Title="Like A Domino | WPF Edition" Height="722" Width="885" 
        MinWidth="600" MinHeight="400" 
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <FontFamily x:Key="edosz" >/fonts/#EDO SZ</FontFamily>
        <FontFamily x:Key="dragonfish" >/fonts/#Dragonfish</FontFamily>
        <FontFamily x:Key="rgg_symbols" >/fonts/#RGGStudioSymbols</FontFamily>
        <FontFamily x:Key="radjani_medium" >/fonts/#Rajdhani Medium</FontFamily>
        <FontFamily x:Key="radjani_semibold" >/fonts/#Rajdhani SemiBold</FontFamily>
        <Style TargetType="Button" x:Key="BrightDisabledButtonStyle" BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HighContrastDisabledButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Opacity" Value="1"/>

                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ExtraDimDisabledButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <!-- light gray -->
                    <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                    <!-- softer border -->
                    <Setter Property="Opacity" Value="0.5"/>
                    <!-- very dim -->
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="209*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Stretch="Uniform" StretchDirection="Both" Grid.ColumnSpan="2">
            <Border x:Name="MainBorder" BorderBrush="Black" BorderThickness="1" Width="900" Height="720">
                <Grid x:Name="MainGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#FFE6E6FA" BorderBrush="#FFCCCCCC" BorderThickness="0,0,0,2">
                        <Grid Margin="20,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" Margin="20,0,0,0">
                                <Label x:Name="player1NameLabel" Content="Player 1" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player1ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" Margin="252,0,0,0" Width="177">
                                <Label x:Name="player3NameLabel" Content="Player 3" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player3ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" Margin="20,0,0,0">
                                <Label x:Name="player2NameLabel" Content="Player 2" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player2ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" Margin="252,0,0,0" Width="177">
                                <Label x:Name="player4NameLabel" Content="Player 4" 
                                FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <Label x:Name="player4ScoreLabel" Content="Score: 0" 
                                FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Grid Grid.Row="1" x:Name="GameArea">
                        <Grid.Background>
                            <ImageBrush ImageSource="/Images/hannya.jpg"/>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="Player3HandGrid" Grid.Row="0" Grid.Column="1" 
                        Background="#FFFFFDC7" Margin="5">
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Grid.Effect>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="Player3CardStackPanel" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Grid x:Name="Player4HandGrid" Grid.Row="1" Grid.Column="0" 
                        Background="#FFFFFDC7" Margin="5">
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Grid.Effect>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                                <StackPanel
                    VerticalAlignment="Center" Orientation="Vertical" x:Name="Player4CardStackPanel" HorizontalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Grid x:Name="Player2HandGrid" Grid.Row="1" Grid.Column="2" 
                        Background="#FFFFFDC7" Margin="5">
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Grid.Effect>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="Player2CardStackPanel" 
                                Orientation="Vertical" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Grid x:Name="Player1HandGrid" Grid.Row="2" Grid.Column="1" 
                        Background="#FFFFFDC7" Margin="5">
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Grid.Effect>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="Player1CardStackPanel" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            </ScrollViewer>
                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>

                        <Grid x:Name="ContentGrid" Grid.Row="1" Grid.Column="1" 
                        Background="#FFBCFF86" Margin="5">
                            <Grid.Effect>
                                <DropShadowEffect Opacity="0.5"/>
                            </Grid.Effect>


                            <Image x:Name="kiryu" Source="/img/kiryu.png" Stretch="Fill" Opacity="0.1"/>


                            <Label Content="Like a Domino" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="{StaticResource dragonfish}" FontSize="58" Height="90" Width="399" Foreground="#FFFF4747" Margin="10,170,0,0" Opacity="0.5"/>


                            <StackPanel x:Name="LayerBottomStackPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,29"/>
                            <StackPanel x:Name="LayerTopStackPanel" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,29,185,0" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                            </StackPanel>
                            <Grid x:Name="LayerRightWrapper"
								  HorizontalAlignment="Center"
								  VerticalAlignment="Center"
								  Margin="0,0,-297,0">
                                <StackPanel x:Name="LayerRightStackPanel"
											Orientation="Horizontal"
											HorizontalAlignment="Center"
											VerticalAlignment="Top"
											RenderTransformOrigin="0.5,0.5">
                                    <StackPanel.RenderTransform>
                                        <RotateTransform Angle="-90"/>
                                    </StackPanel.RenderTransform>
                                </StackPanel>
                            </Grid>

                            <Grid x:Name="LayerLeftWrapper"
								  HorizontalAlignment="Center"
								  VerticalAlignment="Center"
								  Margin="-297,0,0,0">
                                <StackPanel x:Name="LayerLeftStackPanel"
											Orientation="Horizontal"
											HorizontalAlignment="Center"
											VerticalAlignment="Top"
											RenderTransformOrigin="0.5,0.5">
                                    <StackPanel.RenderTransform>
                                        <RotateTransform Angle="90"/>
                                    </StackPanel.RenderTransform>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="PlaceLeftButton" 
							   HorizontalAlignment="Left" 
							   VerticalAlignment="Center"
							   Margin="30,0,0,0"
							   Content="◀ Place Left" 
							   Click="PlaceLeftButton_Click"
							   Width="100" 
							   Height="40"
							   FontSize="14"
							   Background="#FFE6F3FF"
							   BorderBrush="#FF4A90E2"/>

                            <Button x:Name="PlaceRightButton" 
								Content="Place Right ▶" 
								Click="PlaceRightButton_Click"
								Width="100" 
								Height="40"
								FontSize="14"
								Background="#FFE6F3FF"
								BorderBrush="#FF4A90E2"
								HorizontalAlignment="Left" 
								VerticalAlignment="Center"
								Margin="558,0,0,0"/>
                            <Ellipse x:Name="MiddleEllipse" Width="10" Height="10" 
									 Fill="#FF666666" 
									 HorizontalAlignment="Center" 
									 VerticalAlignment="Center"
									 Opacity="0.3"/>

                            <Border BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                        </Grid>
                        <Label x:Name="player1NameLabel2" Content="Label" HorizontalAlignment="Left" Margin="5,75,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.Column="1" Opacity="0.75" Visibility="Hidden"/>
                        <Label x:Name="player2NameLabel2" Content="Label" HorizontalAlignment="Left" Margin="62,388,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="2" Opacity="0.75" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <Label x:Name="player3NameLabel2" Content="Label" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Grid.Column="1" Opacity="0.75" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="0"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <Label x:Name="player4NameLabel2" Content="Label" HorizontalAlignment="Left" Margin="0,12,0,0" VerticalAlignment="Top" Opacity="0.75" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Visibility="Hidden">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="90.8"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                    </Grid>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Window>